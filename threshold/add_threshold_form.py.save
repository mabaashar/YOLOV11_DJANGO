#create threshold form
from django import forms
#from threshold.models import threshold_element
from threshold.models import threshold_component

class add_cam_form(forms.ModelForm):
    class Meta:
        model = threshold_component
        fields = ('area1','cam_ip1','models1','area2','cam_ip2','models2','area3','cam_ip3','models3','area4','cam_ip4','area5','cam_ip5',)
        exclude = ["user"],

    def __init__(self, *args, **kwargs):
        super(add_cam_form, self).__init__(*args, **kwargs)
        for field in self.fields:
            self.fields[field].widget.attrs['class'] = 'form-control'
